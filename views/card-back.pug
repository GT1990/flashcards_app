extends layout 
    
block main    
    section.flashcards
    .card.card-answer
        .card-header
        h1.card-title Answer
        #content
            h2 &lt; #{answer} &gt;
        .card-flip-wrap
            a(href=`/cards/card-front/${id}`)
                img.card-flip(src='/static/img/flip.svg')
        .card-next
            a(href='/cards')
                img(src='/static/img/next.svg')
